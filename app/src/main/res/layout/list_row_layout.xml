<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height"
    android:layout_marginBottom="@dimen/layout_margin"
    android:clickable="true"
    android:layout_margin="@dimen/layout_margin"
    android:background="@drawable/row_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/row_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/layout_margin"
            style="@style/TitleCodeFont"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/desc_height"
            android:text=""
            android:id="@+id/row_desc"
            android:layout_below="@+id/row_title"
            android:layout_toLeftOf="@+id/row_image"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/layout_margin"
            android:ellipsize="end"
            android:maxLines="8"
            style="@style/DescCodeFont"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_image"
            android:layout_below="@+id/row_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:maxHeight="@dimen/iv_max_height"
            android:maxWidth="@dimen/iv_max_width"
            android:layout_margin="@dimen/layout_margin"
            android:background="@drawable/default_image" />

    </RelativeLayout>
